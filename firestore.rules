rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Cases and nested content
    match /cases/{caseId} {
      allow read, write: if request.auth != null;

      match /tasks/{taskId} {
        allow read, write: if request.auth != null;

        match /comments/{commentId} {
          allow read, write: if request.auth != null;
        }
      }

      match /notes/{noteId} {
        allow read, write: if request.auth != null;
      }
    }

    // Users list (manual management)
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Locations (new)
    match /locations/{locId} {
      allow read, write: if request.auth != null;
    }

    // Catch-all: allow signed-in users everywhere (prevents misses)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
