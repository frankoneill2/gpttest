rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow collection group queries on tasks across cases
    match /{path=**}/tasks/{taskId} {
      allow read: if request.auth != null;
    }
    // Manual users list
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /cases/{caseId} {
      allow read, write: if request.auth != null;
      // (Removed per-case presence)
      match /notes/{noteId} {
        allow read, write: if request.auth != null;
      }
      match /tasks/{taskId} {
        allow read, write: if request.auth != null;
        match /comments/{commentId} {
          allow read, write: if request.auth != null;
        }
      }
    }
  }
}
